<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.servicedetails.ServiceDetails">

	<RelativeLayout
			android:id="@+id/profile_card_section"
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:background="@color/colorAccent"
			app:layout_constraintTop_toTopOf="parent">

		<ImageView
				android:id="@+id/profile_image"
				android:layout_width="95dp"
				android:layout_height="95dp"
				android:layout_centerVertical="true"
				android:layout_margin="20dp"
				android:src="@drawable/barberawhite" />

		<TextView
				android:id="@+id/EmailInProfile"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="30dp"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:textStyle="bold"
				tools:text="Service App" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/EmailInProfile"
				android:layout_marginStart="140dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="12dp"
				android:text="Please enter your correct details. All your details will be verified before any booking is assigned"
				android:textColor="@color/CardWhite" />
	</RelativeLayout>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/profile_card_section">

		<EditText
				android:id="@+id/name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:backgroundTint="#CACACA"
				android:hint="Name" />

		<EditText
				android:id="@+id/contact1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/name"
				android:layout_margin="16dp"
				android:backgroundTint="#CACACA"
				android:hint="Mobile no."
				android:inputType="number" />

		<EditText
				android:id="@+id/add"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/contact1"
				android:layout_margin="16dp"
				android:backgroundTint="#CACACA"
				android:hint="Address" />

		<ImageView
				android:id="@+id/profileImg"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/add"
				android:layout_centerInParent="true"
				android:layout_margin="12dp"
				android:src="@drawable/ic_arrow" />

		<Button
				android:id="@+id/upload_photo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/profileImg"
				android:layout_centerInParent="true"
				android:layout_margin="12dp"
				android:text="Upload Photo" />


	</RelativeLayout>

	<Button
			android:id="@+id/Btn3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginBottom="32dp"
			android:padding="15dp"
			android:text="Previous"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

	<Button
			android:id="@+id/Btn2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:layout_marginBottom="32dp"
			android:padding="15dp"
			android:text="Next"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>